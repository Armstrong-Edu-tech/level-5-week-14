export async function getStaticProps() {
  const res = await fetch(`https://dummyjson.com/posts/1`);
  const post = await res.json();

  return {
    props: { post },
    revalidate: 60, // regenerate page every 60 seconds
  };
}

export default function BlogPost({ post }) {
  return (
    <div>
      <h1>{post.title}</h1>
      <p>{post.body}</p>
    </div>
  );
}
